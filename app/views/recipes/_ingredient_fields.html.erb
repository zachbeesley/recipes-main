
<div class="d-flex">
<div class="form-group mr-4" style="padding-right: 20px;">
  <%= form.label :content, "ingredient", class:"form-label" %>
  <%= form.text_field :content, class:"form-control" %>
</div>
<div class="form-group mr-4" style="padding-right: 20px;">
  <%= form.label :amount, "amount", class:"form-label" %>
  <%= form.number_field :amount, class:"form-control", :step => "0.01" %>
</div>
<div class="form-group mr-4" style="padding-right: 20px;">
  <%= form.label :measurement, "measurement", class:"form-label" %>
    <%= form.select :measurement, ['cups', 'tbsp', 'tsp', 'oz', 'g', 'lb', 'ml', 'L', 'None']%>
</div>

<%= link_to_remove_nested(form, link_classes: "btn btn-danger-outline") %>


</div>