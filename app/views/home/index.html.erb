<div style="display: inline-flex;">
  <% @snacks.each do |snack| %>
    <%= render snack %>
  <% end %>
</div>
</div>

<br/>

<%= link_to "Less Than 30 Mins", less_than30_mins_index_path, class:"quick-index-header" %>

<div class="recipes" style="background: #FA5F55; border-radius: 30px; margin: 40px; padding: 20px;">
<div style="display: inline-flex; flex-wrap: wrap;">
